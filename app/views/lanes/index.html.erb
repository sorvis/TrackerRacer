<p id="notice"><%= notice %></p>

<h1>Listing Lanes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lanes.order('lanes.created_at DESC').each do |lane| %>
      <tr>
        <td><%= lane.name %></td>
        <td><%= lane.place %></td>
        <td><%= lane.created_at.strftime("%B %d at %I:%M %p") %></td>
        <td><%= link_to 'Show', lane %></td>
        <td><%= link_to 'Edit', edit_lane_path(lane) %></td>
        <td><%= link_to 'Destroy', lane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

